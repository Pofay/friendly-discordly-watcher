{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"outDir": "dist",
		"sourceMap": true,
		"strict": true,
		"importHelpers": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"*": ["*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
